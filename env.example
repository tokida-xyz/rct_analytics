# アプリケーション設定
APP_NAME=交互作用検定 Webアプリ
VERSION=1.0.0
DEBUG=true

# サーバー設定
HOST=0.0.0.0
PORT=8000

# CORS設定
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# ファイルアップロード設定
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls
UPLOAD_DIR=uploads
RESULTS_DIR=results

# 統計分析設定
DEFAULT_FDR_ALPHA=0.05
MIN_SAMPLE_SIZE=30
MAX_CORRELATION_THRESHOLD=0.9

# セキュリティ設定
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
